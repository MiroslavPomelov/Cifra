<Window x:Class="WPF_07._02._2024_Prakt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_07._02._2024_Prakt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>

        <Border Grid.Row="1">
            <Button Content="Выгрузить данные" Click="Button_Click"/>
        </Border>

        <ListBox Grid.Row="0" ItemsSource="{Binding Passangers}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding PassengerId}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock  Text="{Binding PClass}"/>
                        <TextBlock  Text="{Binding Age}"/>
                        <TextBlock Text="{Binding Sex}"/>
                        <TextBlock Text="{Binding Survived}"/>
                        <TextBlock Text="{Binding SexCode}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>


        </ListBox>
    </Grid>
</Window>
