<Window x:Class="XAML26._01._2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAML26._01._2024"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900" Background="White" WindowState="Normal" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Конпка" 
                Grid.Column="1" Grid.Row="2"
                Name="BTN"
                Width="200"
                Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="BlanchedAlmond" Foreground="Black"
                Visibility="Visible" IsEnabled="True" ToolTip="Просто кнопка"
                FontFamily="Times New Roman" FontSize="18" FontWeight="Bold"/>
    </Grid>
</Window>
