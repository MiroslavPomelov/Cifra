    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Content" Value="Кнопка с тенью"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>


    <StackPanel>
        <Button>
            <Button.Effect>
                <DropShadowEffect Color="Gray"/>
            </Button.Effect>
        </Button>

        <Button>
            <Button.Effect>
                <DropShadowEffect Color="Blue" Direction="120"/>
            </Button.Effect>
        </Button>

        <Button>
            <Button.Effect>
                <DropShadowEffect Color="Green" Direction="210" ShadowDepth="10"/>
            </Button.Effect>
        </Button>

        <Button>
            <Button.Effect>
                <DropShadowEffect Color="Purple" Direction="210" ShadowDepth="10" Opacity="0.5"/>
            </Button.Effect>
        </Button>

        <Button>
            <Button.Effect>
                <DropShadowEffect Color="OrangeRed" Direction="270" ShadowDepth="10" Opacity="0.5" BlurRadius="30"/>
